<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaDockApplication.ViewModels;assembly=AvaloniaDockApplication"
        xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaDockApplication.Views.MainWindow"
        Width="800" Height="450" WindowState="Normal"
        Background="{DynamicResource ThemeBackgroundBrush}"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaDockApplication">

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <idc:DockControl Layout="{Binding Layout}" />

</Window>
